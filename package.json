{
  "name": "devark",
  "version": "1.0.3",
  "description": "CLI tool to scaffold backend features like authentications, authorizations, and more.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "devark": "dist/bin/devark.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "./scripts/build.sh",
    "build:watch": "tsup src/bin/devark.ts --watch --out-dir dist --format esm",
    "start": "node dist/bin/devark.js",
    "dev": "ts-node --esm src/bin/devark.ts",
    "lint": "eslint . --ext .ts,.js"
  },
  "keywords": [
    "backend",
    "oauth",
    "cli",
    "express",
    "generator"
  ],
  "author": "huzfm",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.5.0",
    "chalk-animation": "^2.0.3",
    "commander": "^14.0.0",
    "ejs": "^3.1.10",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "figlet": "^1.8.2",
    "fs-extra": "^11.3.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huzfm/Devark.git"
  },
  "bugs": {
    "url": "https://github.com/huzfm/Devark/issues"
  },
  "homepage": "https://github.com/huzfm/Devark#readme",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "lazycommit": "^4.1.19",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
